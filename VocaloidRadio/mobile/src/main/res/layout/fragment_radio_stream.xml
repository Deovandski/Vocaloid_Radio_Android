<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.VocaloidRadio.RadioStreamFragment">

    <!-- TODO: Update blank fragment layout -->

    <WebView
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:id="@+id/currentSong"
        android:layout_gravity="left|top"
        android:layout_above="@+id/playButton"
        android:layout_alignParentTop="true"
        android:background="@color/bright_foreground_material_light" />

    <Button
        android:layout_width="102dp"
        android:layout_height="68dp"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/mediaController"
        android:layout_toStartOf="@+id/mediaController" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/currentSong"
        android:layout_toRightOf="@+id/playButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <MediaController
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaController"
        android:layout_below="@+id/currentSong"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
